            android:background="@drawable/layout_background"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="S"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/view4"
            android:layout_width="75dp"
