            android:textStyle="bold"
            android:text="S"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/view6"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/layout_background"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="S"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/view7"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/layout_background"
            android:layout_margin="5dp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="S"
            android:textSize="20sp"/>


        <TextView
            android:id="@+id/view8"
