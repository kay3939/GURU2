        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/view5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:background="@drawable/layout_background"
            android:layout_margin="5dp"
